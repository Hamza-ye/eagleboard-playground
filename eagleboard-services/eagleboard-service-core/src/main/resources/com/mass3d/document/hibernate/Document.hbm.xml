<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://com/mass3d/common/identifiableProperties.hbm">]
  >

<hibernate-mapping>
  <!--<typedef class="com.mass3d.hibernate.jsonb.type.JsonSetBinaryType" name="jblTranslations">-->
    <!--<param name="clazz">com.mass3d.translation.Translation</param>-->
  <!--</typedef>-->
  <class name="com.mass3d.document.Document" table="document">

    <cache usage="read-write" />

    <id name="id" column="documentid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="false" length="230" />

    <property name="url" not-null="true" type="text" />

    <many-to-one name="fileResource" class="com.mass3d.fileresource.FileResource" column="fileresource" foreign-key="fk_document_fileresourceid" />

    <property name="external" not-null="true" />

    <property name="contentType" />

    <property name="attachment" />

    <!--<property name="translations" type="jblTranslations"/>-->

    <!--&lt;!&ndash; Dynamic attribute values &ndash;&gt;-->
    <!--<set name="attributeValues" table="documentattributevalues" cascade="all-delete-orphan">-->
      <!--<cache usage="read-write" />-->
      <!--<key column="documentid" />-->
      <!--<many-to-many class="com.mass3d.attribute.AttributeValue" column="attributevalueid" unique="true" />-->
    <!--</set>-->

    <!-- Access properties -->
    <property name="externalAccess" />

    <many-to-one name="user" class="com.mass3d.user.User" column="userid" foreign-key="fk_document_userid" />

    <property name="publicAccess" length="8" />

    <set name="userGroupAccesses" table="documentusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="documentid" />
      <many-to-many class="com.mass3d.user.UserGroupAccess" column="usergroupaccessid" unique="true" />
    </set>

    <set name="userAccesses" table="documentuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="documentid" />
      <many-to-many class="com.mass3d.user.UserAccess" column="useraccessid" unique="true" />
    </set>

  </class>

</hibernate-mapping>
