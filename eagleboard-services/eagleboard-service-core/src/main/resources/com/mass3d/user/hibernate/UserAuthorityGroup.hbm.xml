<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://com/mass3d/common/identifiableProperties.hbm">]
  >

<hibernate-mapping>
  <!--<typedef class="com.mass3d.hibernate.jsonb.type.JsonSetBinaryType" name="jblTranslations">-->
    <!--<param name="clazz">com.mass3d.translation.Translation</param>-->
  <!--</typedef>-->
  <class name="com.mass3d.user.UserAuthorityGroup" table="userrole">

    <cache usage="read-write" />

    <id name="id" column="userroleid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <property name="description" />

    <!--<property name="translations" type="jblTranslations"/>-->

    <set name="members" table="userrolemembers" inverse="true">
      <key column="userroleid" />
      <many-to-many column="userid" class="com.mass3d.user.UserCredentials" />
    </set>

    <set name="authorities" table="userroleauthorities">
      <cache usage="read-write" />
      <key column="userroleid" foreign-key="fk_userroleauthorities_userroleid" />
      <element type="string" column="authority" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="com.mass3d.user.User" column="userid" foreign-key="fk_userrole_userid" />

    <property name="publicAccess" length="8" />

    <set name="userGroupAccesses" table="userroleusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="userroleid" />
      <many-to-many class="com.mass3d.user.UserGroupAccess" column="usergroupaccessid" unique="true" />
    </set>

    <set name="userAccesses" table="userroleuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="userroleid" />
      <many-to-many class="com.mass3d.user.UserAccess" column="useraccessid" unique="true" />
    </set>

  </class>

</hibernate-mapping>
